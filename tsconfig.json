{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths":{
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noErrorTruncation": true
  },
  "$schema": "https://localhost:2300/",
  "include": [
    "src",
    "forge.config.ts",
    "vite.*.ts",
    "*.vue"
  ]
}
